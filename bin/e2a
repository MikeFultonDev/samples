#
# e2a: convert file on disk in EBCDIC to ASCII
#
syntax() {
	echo 'Syntax: e2a <file>: convert file from ebcdic to ascii' >&2
}
debug=0
verbose=0
while getopts ":vd" opt; do
	case ${opt} in
	d )
           	debug=1
		;;
	v )
           	verbose=1
		;;
	\?)
           	if [ "${OPTARG}" != "?" ]; then
                        echo "Invalid option: -$OPTARG" >&2
		fi
                syntax
		exit 4
		;;
	esac
done
shift $(expr $OPTIND - 1 )
if [ $# -ne 1 ]; then
	echo 'Need to specify a file to convert' >&2
	syntax
	exit 16
fi

if [ ! -f $1 ]; then
	echo 'File specified is not a regular file' >&2
	syntax
	exit 16
fi

#
# do a basic 'copy' first and ensure it works.
# this will do 2 things: 1) make sure permissions are ok and   
# 2) after the iconv is done, the attributes will still be there (e.g. 'x' will be set if needed)
#
tmp=/tmp/ascii.$$
cp $1 ${tmp}
if [ $? -gt 0 ]; then
	echo "Unable to write temporary file to ${tmp}. File not converted" >&2
	exit 16
fi

iconv -f IBM-1047 -t ISO8859-1 <$1 >${tmp}

mv ${tmp} $1
chtag -tc ISO8859-1 $1
