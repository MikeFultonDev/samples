#!/bin/sh
if [ $# -lt 1 ]; then
	echo "Syntax: $0 <db-hlq>\n" >&2
	echo "  where <db-hlq> is the name of the VSAM Sphere to create for Xsysvar\n" >&2
	exit 4
fi
hlq="$1"
repro=/tmp/$$.vsam 
dd if=/dev/zero bs=1 count=53 2>/dev/null >"${repro}"
crtvsam "${hlq}" "${repro}" prodid:4:1 key:16:5
rm ${repro}
