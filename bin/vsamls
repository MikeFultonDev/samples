#!/bin/sh
dataset=$(echo "$1" | tr '[:lower:]' '[:upper:]');
out=`mvscmdauth --pgm=idcams --sysprint=* --sysin=stdin` <<zz
  LISTCAT CLUSTER ENTRIES(${dataset}) ALL
zz
rc=$?
echo "${out}"
if [ ${rc} -gt 0 ]; then
	exit $rc
fi
aixes=`echo "${out}" | awk '/AIX-/ { print substr($1,10); }'`
for aix in ${aixes}; do
	out=`mvscmdauth --pgm=idcams --sysprint=* --sysin=stdin` <<zz
  LISTCAT AIX ENTRIES(${aix}) ALL
zz
	rc=$?
	echo "${out}"
	if [ ${rc} -gt 0 ]; then
		exit $rc
	fi
done
exit 0
